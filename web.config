<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <security>
            <requestFiltering>
                <fileExtensions>
                    <add fileExtension=".dat" allowed="true" />
                    <add fileExtension=".patt" allowed="true" />
                </fileExtensions>
            </requestFiltering>
        </security>
        <staticContent>
            <mimeMap fileExtension=".dat" mimeType="text/plain" />
            <mimeMap fileExtension=".patt" mimeType="text/plain" />
            <mimeMap fileExtension=".hiro" mimeType="text/plain" />
        </staticContent>
    </system.webServer>
</configuration>
